    padding = 8
    horizontal_padding = 8
    text_icon_padding = 10
    frame_width = 1
    # frame_color = "#0f0f14"
    # background = "#d5d6db" # #1a1b26 #24283b
    # foreground = "#343b58" # #c0caf5
    gap_size = 0
    separator_color = frame
