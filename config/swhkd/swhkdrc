# super + space
#     ~/bin/keyboard-layout.bash

super + tab
    alacritty

super + z
    thunar

super + x
    nvim-gui

super + shift + z
    ~/bin/launcher.zsh lock

super + grave
    ~/bin/launcher.zsh launcher

super + print
    ~/bin/launcher.zsh screenshot-area

print
    ~/bin/launcher.zsh screenshot

XF86Audio{Prev,Play,Next}
    ~/bin/media-player.bash {prev,play,next}

XF86AudioMute
    ~/bin/volume-control.bash toggle-mute

XF86Audio{Lower,Raise}Volume
    ~/bin/volume-control.bash set {-10,+10}

XF86MonBrightness{Down,Up}
    ~/.config/eww/scripts/brightness.bash set {-10,+10}
